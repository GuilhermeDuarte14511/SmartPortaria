@{
    ViewData["Title"] = "Login - SmartPortaria";
}

<div id="loginPage" class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <i class="fas fa-door-open fa-3x mb-2 text-primary"></i>
            <h3 class="mb-0">SmartPortaria</h3>
            <small class="text-muted">Acesso ao sistema</small>
        </div>

        <form id="loginForm">
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" id="Email" class="form-control" placeholder="email@dominio.com" required />
                </div>
            </div>

            <div class="mb-3">
                <label for="Senha" class="form-label">Senha</label>
                <div class="input-group" id="passwordWrapper">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" id="Senha" class="form-control" placeholder="Digite sua senha" required />
                    <span class="input-group-text" style="cursor:pointer;" id="togglePassword">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary" id="btnLogin">
                    <i class="fas fa-sign-in-alt me-2"></i>Entrar
                </button>
            </div>

            <div class="text-center">
                <a href="/Account/Register" class="btn btn-link">
                    <i class="fas fa-user-plus me-1"></i>Criar Usuário
                </a>
            </div>
        </form>
    </div>
</div>
